# Spring Configuration
SERVER_PORT=8085
SPRING_APPLICATION_NAME=search-service

# Database Configuration
SPRING_DATASOURCE_URL=jdbc:postgresql://postgres:5432/eticaret?currentSchema=search
SPRING_DATASOURCE_USERNAME=postgres
SPRING_DATASOURCE_PASSWORD=123456
SPRING_JPA_HIBERNATE_DDL_AUTO=validate
SPRING_JPA_SHOW_SQL=true

# Flyway Configuration
SPRING_FLYWAY_ENABLED=true
SPRING_FLYWAY_LOCATIONS=classpath:db/migration

# Kafka Configuration
SPRING_KAFKA_BOOTSTRAP_SERVERS=kafka:9093
SPRING_KAFKA_CONSUMER_GROUP_ID=search-service
SPRING_KAFKA_CONSUMER_AUTO_OFFSET_RESET=earliest

# Full-Text Search Configuration
SEARCH_DEFAULT_LIMIT=20
SEARCH_MAX_LIMIT=100

# Logging
LOGGING_LEVEL_ROOT=INFO
LOGGING_LEVEL_COM_SEARCH_SERVICE=DEBUG
