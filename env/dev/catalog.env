# Spring Configuration
SPRING_PROFILES_ACTIVE=dev
SERVER_PORT=8082
SPRING_APPLICATION_NAME=catalog-service

# Database Configuration
SPRING_DATASOURCE_URL=jdbc:postgresql://postgres:5432/catalog_db
SPRING_DATASOURCE_USERNAME=postgres
SPRING_DATASOURCE_PASSWORD=123456
SPRING_JPA_HIBERNATE_DDL_AUTO=validate
SPRING_JPA_SHOW_SQL=true

# Flyway Configuration
SPRING_FLYWAY_ENABLED=true
SPRING_FLYWAY_LOCATIONS=classpath:db/migration

# Kafka Configuration
SPRING_KAFKA_BOOTSTRAP_SERVERS=kafka:9093
SPRING_KAFKA_CONSUMER_GROUP_ID=catalog-service
SPRING_KAFKA_CONSUMER_AUTO_OFFSET_RESET=earliest

# MinIO Configuration
MINIO_ENDPOINT=http://minio:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET_NAME=e-ticaret-products

# Cache Configuration
SPRING_CACHE_TYPE=caffeine
SPRING_CACHE_CAFFEINE_SPEC=maximumSize=1000,expireAfterWrite=60s

# Logging
LOGGING_LEVEL_ROOT=INFO
LOGGING_LEVEL_COM_CATALOG_SERVICE=DEBUG
