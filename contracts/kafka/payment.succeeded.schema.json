{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "PaymentSucceededEvent",
  "required": ["eventId", "eventType", "occurredAt", "payment"],
  "properties": {
    "eventId": {
      "type": "string",
      "format": "uuid",
      "description": "Unique identifier for this event"
    },
    "eventType": {
      "type": "string",
      "const": "payment.succeeded",
      "description": "Type of the event"
    },
    "occurredAt": {
      "type": "string",
      "format": "date-time",
      "description": "ISO-8601 timestamp when the event occurred"
    },
    "payment": {
      "type": "object",
      "required": ["orderId", "provider", "paymentId"],
      "properties": {
        "orderId": {
          "type": "string",
          "format": "uuid",
          "description": "Order ID this payment is for"
        },
        "provider": {
          "type": "string",
          "enum": ["iyzico", "stripe", "paypal"],
          "description": "Payment provider used"
        },
        "paymentId": {
          "type": "string",
          "description": "External payment ID from the provider"
        }
      }
    }
  }
}
