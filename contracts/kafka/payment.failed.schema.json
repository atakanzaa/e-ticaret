{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "PaymentFailedEvent",
  "required": ["eventId", "eventType", "occurredAt", "payment"],
  "properties": {
    "eventId": {
      "type": "string",
      "format": "uuid",
      "description": "Unique identifier for this event"
    },
    "eventType": {
      "type": "string",
      "const": "payment.failed",
      "description": "Type of the event"
    },
    "occurredAt": {
      "type": "string",
      "format": "date-time",
      "description": "ISO-8601 timestamp when the event occurred"
    },
    "payment": {
      "type": "object",
      "required": ["orderId", "reason"],
      "properties": {
        "orderId": {
          "type": "string",
          "format": "uuid",
          "description": "Order ID this payment was attempted for"
        },
        "reason": {
          "type": "string",
          "description": "Reason why the payment failed"
        }
      }
    }
  }
}
