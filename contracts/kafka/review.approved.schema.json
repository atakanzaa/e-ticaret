{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "ReviewApprovedEvent",
  "required": ["eventId", "eventType", "occurredAt", "review"],
  "properties": {
    "eventId": {
      "type": "string",
      "format": "uuid",
      "description": "Unique identifier for this event"
    },
    "eventType": {
      "type": "string",
      "const": "review.approved",
      "description": "Type of the event"
    },
    "occurredAt": {
      "type": "string",
      "format": "date-time",
      "description": "ISO-8601 timestamp when the event occurred"
    },
    "review": {
      "type": "object",
      "required": ["productId", "rating"],
      "properties": {
        "productId": {
          "type": "string",
          "format": "uuid",
          "description": "Product ID this review is for"
        },
        "rating": {
          "type": "integer",
          "minimum": 1,
          "maximum": 5,
          "description": "Rating given in the review"
        }
      }
    }
  }
}
